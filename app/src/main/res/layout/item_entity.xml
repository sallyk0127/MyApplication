<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exerciseNameEntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property 1"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/muscleGroupEntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property 3"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/equipmentEntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property 4"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/difficultyEntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property 5"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/caloriesBurnedPerHourEntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property 6"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
